@model Core.Entities.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<div>
    <h3>Are you sure you want to delete this customer?</h3>
    <div>
        <strong>Name: </strong> @Model.FirstName @Model.LastName
    </div>
    <div>
        <strong>Email: </strong> @Model.Email
    </div>
    <div>
        <strong>Phone: </strong> @Model.PhoneNumber
    </div>
    <div>
        <strong>Address: </strong> @Model.Address
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary">Cancel</a>
    </form>
</div>